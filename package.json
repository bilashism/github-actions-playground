{
  "name": "github-actions-playground",
  "version": "0.4.0",
  "private": true,
  "packageManager": "pnpm@8.7.6",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "serve": "vite preview",
    "add-commit-push": "git add . && pnpm run commitizen && git push",
    "lint": "eslint src --ext .tsx --ext .ts",
    "lint:fix": "pnpm run lint --fix",
    "format": "prettier --config ./.prettierrc -w src/**/*.{js,jsx,ts,tsx,css,html,json} && pnpm run lint:fix && git update-index",
    "pretest": "pnpm run lint:fix",
    "test": "jest --colors --passWithNoTests",
    "posttest": "npx http-server coverage/lcov-report",
    "test:watch": "pnpm run test --collectCoverage=false --watch",
    "prepare": "husky install",
    "commitizen": "cz",
    "release": "dotenv release-it"
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release v${version}"
    },
    "github": {
      "release": true
    },
    "npm": {
      "publish": false
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "infile": "CHANGELOG.md",
        "preset": {
          "name": "conventionalcommits",
          "types": [
            {
              "type": "feat",
              "section": "Features"
            },
            {
              "type": "fix",
              "section": "Bug Fixes"
            },
            {}
          ]
        }
      }
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix",
      "eslint"
    ],
    "*.{json,css}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@floating-ui/react": "^0.25.0",
    "@headlessui/react": "^1.7.17",
    "@loadable/component": "^5.15.3",
    "@reduxjs/toolkit": "^1.9.5",
    "axios": "^1.4.0",
    "clsx": "^1.2.1",
    "dompurify": "^3.0.5",
    "firebase": "^10.0.0",
    "js-cookie": "^3.0.5",
    "lodash": "^4.17.21",
    "primereact": "^9.6.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-error-boundary": "^4.0.10",
    "react-helmet": "^6.1.0",
    "react-hook-form": "^7.45.2",
    "react-hot-toast": "^2.4.1",
    "react-icons": "^4.10.1",
    "react-lazily": "^0.9.2",
    "react-password-strength-bar": "^0.4.1",
    "react-redux": "^8.1.1",
    "react-responsive-modal": "^6.4.2",
    "react-router-dom": "^6.14.1",
    "react-select": "^5.7.4",
    "react-tabs": "^6.0.2",
    "reactjs-popup": "^2.0.5",
    "socket.io-client": "^4.7.2",
    "swiper": "^10.0.4",
    "tailwind-merge": "^1.13.2",
    "zod": "^3.22.2"
  },
  "devDependencies": {
    "@babel/core": "^7.22.8",
    "@commitlint/cli": "^17.6.6",
    "@commitlint/config-conventional": "^17.6.6",
    "@release-it/conventional-changelog": "^7.0.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@types/dompurify": "^3.0.2",
    "@types/jest": "^29.5.3",
    "@types/js-cookie": "^3.0.3",
    "@types/loadable__component": "^5.13.4",
    "@types/lodash": "^4.14.197",
    "@types/react": "^18.2.14",
    "@types/react-dom": "^18.2.6",
    "@types/react-helmet": "^6.1.6",
    "@types/react-redux": "^7.1.25",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^4.0.3",
    "autoprefixer": "^10.4.14",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "dotenv-cli": "^7.3.0",
    "eslint": "^8.44.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "husky": "^8.0.3",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.6.1",
    "jest-environment-jsdom": "^29.6.1",
    "lint-staged": "^13.2.3",
    "postcss": "^8.4.25",
    "prettier": "^3.0.0",
    "release-it": "^16.1.5",
    "rollup": "^3.26.2",
    "standard-version": "^9.5.0",
    "tailwindcss": "^3.3.2",
    "ts-jest": "^29.1.1",
    "typescript": "^5.1.6",
    "vite": "^4.4.3",
    "vite-plugin-mkcert": "^1.16.0"
  }
}
